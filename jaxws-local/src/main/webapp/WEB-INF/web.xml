<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" >
	<listener>
		<listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>JAXWS</servlet-name>
		<servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JAXWS</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>fileStorage</param-name>
		<param-value>c:/opt/files/</param-value>
	</context-param>
	
	 <security-role>
	 	<role-name>admin</role-name>
	 </security-role>
	 
	 <security-constraint>
	 	<web-resource-collection>
	 		<web-resource-name>admin jaxws</web-resource-name>
	 		<url-pattern>/PeopleInstanceService</url-pattern>
	 		<http-method>POST</http-method>
	 	</web-resource-collection>
	 	<auth-constraint>
	 		<description>Restricted to admins</description>
	 		<role-name>admin</role-name>
	 	</auth-constraint>
	 	<user-data-constraint>
	 		<transport-guarantee>NONE</transport-guarantee>
	 	</user-data-constraint>
	 </security-constraint>
	 <login-config>
	 	<auth-method>BASIC</auth-method>
	 </login-config>
</web-app>